@using MyCMS.Utilities
@model IEnumerable<DataLayer.Page>
@{
    ViewBag.Title = "ShowGroupNews";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item">خانه</li>
    <li class="breadcrumb-item">اخبار</li>
    <li class="breadcrumb-item active">@ViewBag.header</li>
</ul>



<section class="last-news-section border-radius">
    <header><i class="icons icon-doc-2"></i>  <h3>آرشیو خبرهای @ViewBag.header</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.ImageName">
                <h2> <a href="/News/@item.PageID"> @item.Title </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShmasi() </span>
                <a href="/News/@item.PageID" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }

    </ul>
</section>
